{
  "name": "adoptemos-server",
  "version": "1.0.0",
  "engines": {
    "node": "20.9"
  },
  "description": "Backend for Adoptemos website",
  "main": "lib/main.js",
  "scripts": {
    "start": "node lib/main.js",
    "watch": "node ./scripts/watch.js",
    "watch-verbose": "nodemon --watch ./ --ext ts,json,js --exec npm run docker-start -s",
    "build": "npm run esbuild -s",
    "typescript": "echo \"Running typescript check ðŸ”Ž\" && echo \"...\" && tsc && echo \"Typescript check passed âœ…\n\"",
    "esbuild": "echo \"Building ðŸ—ï¸\" && echo \"...\" && node ./scripts/build.js && echo \"Build successful âœ…\n\"",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "time": "node ./scripts/time.js",
    "time:docker-start-quiet": "npm run time start && npm run docker-start-quiet -s && npm run time",
    "docker-start": "npm run typescript && npm run docker-build && npm run docker-up && npm run docker-image-prune-quiet",
    "docker-start-quiet": "node ./scripts/dockerStartQuiet.js",
    "docker-build": "source .env && docker build -t $APP_NAME -f dockerfiles/Dockerfile.dev .",
    "docker-build-quiet": "source .env && echo \"Building docker image ðŸ—\" && echo \"...\" && docker build -q > /dev/null -t $APP_NAME -f dockerfiles/Dockerfile.dev . && echo \"Docker image build successful âœ…\n\"",
    "docker-up": "docker-compose up -d",
    "docker-up-ci": "docker-compose up --no-deps -d app",
    "docker-up-quiet": "echo \"Starting docker containers ðŸ“¦\" && echo \"...\" && docker-compose up -d > /dev/null 2>&1 && echo \"Docker containers started successfully âœ…\n\"",
    "docker-down": "docker-compose down",
    "docker-image-prune-quiet": "docker image prune -f > /dev/null"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JackBlakeston/adoptemos-server.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JackBlakeston/adoptemos-server/issues"
  },
  "homepage": "https://github.com/JackBlakeston/adoptemos-server#readme",
  "dependencies": {
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^6.2.0",
    "mongodb-connection-string-url": "^2.6.0",
    "mongoose": "^8.0.1"
  },
  "devDependencies": {
    "@limegrass/eslint-plugin-import-alias": "^1.1.0",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
