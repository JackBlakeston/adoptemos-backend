{
  "name": "adoptemos-server",
  "version": "1.0.0",
  "engines": {
    "node": "20.9"
  },
  "description": "Backend for Adoptemos website",
  "main": "lib/main.js",
  "scripts": {
    "start": "node lib/main.js",
    "build": "npm run esbuild -s",
    "build-start": "npm run build && npm start",
    "watch": "nodemon --watch ./ --ext ts,json --exec npm run build-start",
    "typescript": "echo \"Running typescript check üîé\" && echo \"...\" && tsc && echo \"Typescript check passed ‚úÖ\n\"",
    "esbuild": "echo \"Building üèóÔ∏è\" && echo \"...\" && node ./scripts/build.js && echo \"Files built successfully ‚úÖ\n\"",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "docker-start": "npm run docker-build && npm run docker-up && npm run docker-image-prune-quiet",
    "docker-build": "source .env && docker build -t $APP_NAME -f dockerfiles/Dockerfile.dev .",
    "docker-up": "docker-compose up -d",
    "docker-up-ci": "docker-compose up --no-deps -d app",
    "docker-down": "docker-compose down",
    "auto-docs": "source .env && node scripts/buildSwaggerFiles.js && node scripts/swaggerAutogen.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JackBlakeston/adoptemos-server.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^6.2.0",
    "mongodb-connection-string-url": "^2.6.0",
    "mongoose": "^8.0.1",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@limegrass/eslint-plugin-import-alias": "^1.1.0",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.9.0",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
