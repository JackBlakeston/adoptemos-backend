{
  "testTimeout": 20000,
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/*.test.ts"],
  "transform": {
    "^.+\\.ts$": ["ts-jest"]
  },
  "moduleNameMapper": {
    "^@src/(.*)$": "<rootDir>/src/$1"
  },
  "collectCoverageFrom": ["src/**/*.ts"],
  "coveragePathIgnorePatterns": ["src/main.ts", "src/config"],
  "coverageDirectory": "coverage",
  "coverageReporters": ["lcov", "text", "html"]
}
